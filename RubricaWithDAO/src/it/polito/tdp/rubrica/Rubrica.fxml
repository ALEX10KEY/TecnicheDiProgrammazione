<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.rubrica.RubricaController">
   <top>
      <Label text="Rubrica" BorderPane.alignment="CENTER">
         <padding>
            <Insets top="10.0" />
         </padding>
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </top>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="30.0">
               <children>
                  <GridPane>
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" />
                      <ColumnConstraints hgrow="SOMETIMES" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Nome" />
                        <Label text="Cognome" GridPane.rowIndex="1" />
                        <Label text="Data di nascita " GridPane.rowIndex="2" />
                        <Label text="Telefono" GridPane.rowIndex="3" />
                        <TextField fx:id="txtNome" promptText="Inserisci nome..." GridPane.columnIndex="1" />
                        <TextField fx:id="txtCognome" promptText="Inserisci cognome..." GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <TextField fx:id="txtTelefono" promptText="Inserisci numero di telefono..." GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <DatePicker fx:id="dtpckNascita" promptText="Inserisci data..." GridPane.columnIndex="1" GridPane.rowIndex="2" />
                     </children>
                  </GridPane>
                  <GridPane>
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" />
                      <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
                        <ColumnConstraints hgrow="SOMETIMES" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints vgrow="SOMETIMES" />
                      <RowConstraints vgrow="SOMETIMES" />
                      <RowConstraints vgrow="SOMETIMES" />
                        <RowConstraints vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <HBox GridPane.rowIndex="2">
                           <children>
                              <Label text="Id " />
                              <TextField fx:id="txtIdModifica" prefHeight="25.0" prefWidth="45.0" />
                           </children>
                        </HBox>
                        <HBox GridPane.rowIndex="3">
                           <children>
                              <Label text="Id " />
                              <TextField fx:id="TxtIdCancella" prefHeight="25.0" prefWidth="47.0" />
                           </children>
                        </HBox>
                        <Button fx:id="btnInserimento" mnemonicParsing="false" onAction="#doInserimento" text="Inserimento" GridPane.columnIndex="1" />
                        <Button fx:id="btnRicerca" mnemonicParsing="false" onAction="#doRicerca" text="Ricerca" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                        <Button fx:id="btnModifica" mnemonicParsing="false" onAction="#doModifica" text="Modifica" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
                        <Button fx:id="btnCancella" mnemonicParsing="false" onAction="#doCancella" text="Cancella" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
                        <Button fx:id="btnApplicaModifica" mnemonicParsing="false" onAction="#doApplicaModifica" text="Applica" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                        <Button fx:id="btnApplicaCancella" mnemonicParsing="false" onAction="#doApplicaCancella" text="Applica" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                     </children>
                  </GridPane>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <TextArea fx:id="txtArea" editable="false" promptText="Ricerca...">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextArea>
         </children>
      </VBox>
   </center>
</BorderPane>
